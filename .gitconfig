[alias]
  a  = add
  ama = commit -a --amend --no-edit
  amm = commit --amend --no-edit
  b  = branch
  br = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  d  = diff
  ds = diff --staged
  l  = log
  la = log --graph --all
  lg = log --graph
  lm = log --pretty=medium
  ln = log --name-status
  s  = status
  st = status
  su = submodule update --init --recursive
[color]
  branch = auto
  diff   = auto
  status = auto
[diff]
  indentHeuristic = true
[format]
  pretty = format:%Cblue%cd %Cgreen%h %Creset%s %Cblue(%aN)%Cgreen%d
[interactive]
  diffFilter = diff-so-fancy --patch
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = vimdiff -c 'wincmd J' -n $MERGED $LOCAL $BASE $REMOTE
[log]
  date = format:%F %I:%M %p
[pager]
  diff = diff-so-fancy | less
  log  = diff-so-fancy | less
  show = diff-so-fancy | less
[pull]
  rebase = true
[stash]
  showPatch = true
[diff-so-fancy]
  markEmptyLines = false
  stripLeadingSymbols = false
